<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"> <!--Theme.AppCompat.Light.DarkActionBar-->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/color_text_golden</item>
       <!-- <item name="android:windowIsTranslucent">true</item>-->
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <declare-styleable name="CustomView">
        <attr name="customFont" format="string"></attr>
        <attr name="setAlpha" format="boolean"></attr>
    </declare-styleable>

     <!--Textinputlayout theme-->

    <style name="MyAppearance">
        <item name="colorAccent">#A9A9AB</item>
        <item name="android:textColorHint">#A9A9AB</item>
        <item name="android:textSize">15sp</item>

        <item name="colorControlNormal">#A9A9AB</item>
        <item name="colorControlActivated">#A9A9AB</item>

    </style>


    <!--ALERT DIALOG THEME-->
    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/clr_header</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/clr_black</item>
        <!-- Used for the background -->
        <item name="android:background">@color/clr_white</item>
        <!--Animation-->
        <!--<item name="android:windowEnterAnimation">@anim/enter_from_left</item>
        <item name="android:windowExitAnimation">@anim/exit_to_right</item>-->
    </style>

    <style name="TransparentProgressDialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="PopUpDialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!--TOOLTIP-->
    <style name="ToolTipLayoutDefaultStyle">
        <item name="ttlm_padding">@dimen/ttlm_default_padding</item>
        <item name="ttlm_strokeColor">@android:color/transparent</item>
        <item name="ttlm_backgroundColor">@color/clr_red</item>
        <item name="ttlm_strokeWeight">@dimen/ttlm_default_stroke_weight</item>
        <item name="ttlm_cornerRadius">@dimen/ttlm_default_corner_radius</item>
        <item name="ttlm_arrowRatio">1.4</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="ttlm_overlayStyle">@style/ToolTipOverlayDefaultStyle</item>
        <item name="ttlm_elevation">@dimen/ttlm_default_elevation</item>
        <item name="ttlm_textColor">@color/clr_white</item>
    </style>

    <style name="ToolTipOverlayDefaultStyle">
        <item name="android:color">@color/clr_red</item>
        <item name="ttlm_repeatCount">99</item>
        <item name="ttlm_duration">600</item>
        <item name="android:alpha">0.5</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">@color/clr_white</item>
        <item name="ttlm_textColor">@color/clr_white</item>
    </style>

    <style name="ToolTipTextStyle">
        <item name="android:textColor">@color/clr_white</item>
    </style>

