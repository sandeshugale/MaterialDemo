<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/toplayout"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/diagonalview"
                android:orientation="vertical">

                <com.p1024.convenientdetailer.CustomViews.RoundedImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/place_holder" />

                <RatingBar
                    android:id="@+id/rtb_add_prof"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:isIndicator="true"
                    android:numStars="5" />
                <!-- <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="60dp"
                     android:orientation="horizontal"
                     android:layout_gravity="bottom"
                     android:gravity="center"
                     android:layout_marginBottom="@dimen/SIZE_10"
                     >

                 </LinearLayout>-->

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/toplayout"
                android:orientation="vertical"

                >

                <com.p1024.convenientdetailer.CustomViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/SIZE_10"
                    android:text="Personal Information"
                    android:textSize="@dimen/TEXT_SIZE_18" />

                <android.support.v7.widget.CardView
                    android:id="@+id/media_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardElevation="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <!--First row-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/SIZE_10"
                                android:orientation="horizontal"
                                android:layout_weight="1">

                                <com.p1024.convenientdetailer.CustomViews.CustomTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="First Name "
                                    android:textColor="#A9A9AB" />

                                <com.p1024.convenientdetailer.CustomViews.CustomTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="FName"
                                    android:textColor="@color/clr_black" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/SIZE_10"
                                android:orientation="horizontal"
                                android:layout_weight="1">

                                <com.p1024.convenientdetailer.CustomViews.CustomTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Last Name "
                                    android:textColor="#A9A9AB" />

                                <com.p1024.convenientdetailer.CustomViews.CustomTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="LName"
                                    android:textColor="@color/clr_black" />
                            </LinearLayout>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#A9A9AB"
                            />
                        <!--second row-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/SIZE_10"
                                android:orientation="horizontal"
                                android:layout_weight="1">

                                <com.p1024.convenientdetailer.CustomViews.CustomTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Company Name "
                                    android:textColor="#A9A9AB" />

                                <com.p1024.convenientdetailer.CustomViews.CustomTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="CName"
                                    android:textColor="@color/clr_black" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/SIZE_10"
                                android:orientation="horizontal"
                                android:layout_weight="1"
                                android:visibility="gone">

                                <com.p1024.convenientdetailer.CustomViews.CustomTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Last Name "
                                    android:textColor="#A9A9AB" />

                                <com.p1024.convenientdetailer.CustomViews.CustomTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="LName"
                                    android:textColor="@color/clr_black" />
                            </LinearLayout>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#A9A9AB"
                            />
                        <!--Third row-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/SIZE_10"
                                android:orientation="horizontal"
                                android:layout_weight="1">

                                <ImageView
                                    android:id="@+id/imgmarkerview"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/ic_facebook_placeholder_for_locate_places_on_maps_1"
                                     />

                                <com.p1024.convenientdetailer.CustomViews.CustomTextView
                                    android:layout_toRightOf="@id/imgmarkerview"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="xyz address pune "
                                    android:gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/clr_black" />
                            </RelativeLayout>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#A9A9AB"
                            />
                        <!--Forth row-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/SIZE_10"
                                android:orientation="horizontal"
                                android:layout_weight="1">

                                <ImageView
                                    android:id="@+id/imgtime"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/ic_wall_clock"
                                    />
                                       <LinearLayout
                                        android:layout_centerVertical="true"
                                        android:layout_toRightOf="@id/imgtime"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                           android:layout_marginLeft="10dp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:layout_weight="1">

                                            <com.p1024.convenientdetailer.CustomViews.CustomTextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:text="Open "
                                                android:textColor="#A9A9AB" />

                                            <com.p1024.convenientdetailer.CustomViews.CustomTextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:text="9:00 a.m."
                                                android:textColor="@color/clr_black" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"

                                            android:orientation="horizontal"
                                            android:layout_weight="1">

                                            <com.p1024.convenientdetailer.CustomViews.CustomTextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:text="Close"
                                                android:textColor="#A9A9AB" />

                                            <com.p1024.convenientdetailer.CustomViews.CustomTextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:text="9:00 p.m"
                                                android:textColor="@color/clr_black" />
                                        </LinearLayout>
                                    </LinearLayout>



                            </RelativeLayout>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#A9A9AB"
                            />

                        <!--Fifth row-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/SIZE_10"
                                android:orientation="horizontal"
                                android:layout_weight="1">

                                <ImageView
                                    android:id="@+id/ic_phone"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/ic_phone"
                                    />

                                <com.p1024.convenientdetailer.CustomViews.CustomTextView
                                    android:layout_toRightOf="@id/ic_phone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="8237519454"
                                    android:gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/clr_black" />
                            </RelativeLayout>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#A9A9AB"
                            />
                        <!--Sixth row-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/SIZE_10"
                                android:orientation="horizontal"
                                android:layout_weight="1">

                                <ImageView
                                    android:id="@+id/icmail"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/ic_close_envelope"
                                    />

                                <com.p1024.convenientdetailer.CustomViews.CustomTextView
                                    android:layout_toRightOf="@id/icmail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="sugale32@gmail.com"
                                    android:gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/clr_black" />
                            </RelativeLayout>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#A9A9AB"
                            />
                        <!--Seventh row-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/SIZE_10"
                                android:orientation="horizontal"
                                android:layout_weight="1">

                                <ImageView
                                    android:id="@+id/icearth"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/ic_earth"
                                    />

                                <com.p1024.convenientdetailer.CustomViews.CustomTextView
                                    android:layout_toRightOf="@id/icearth"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="www.sandesh.com"
                                    android:gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/clr_black" />
                            </RelativeLayout>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#A9A9AB"
                            />
                        <!--eigth row-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/SIZE_10"
                                android:orientation="horizontal"
                                android:layout_weight="1">

                                <ImageView
                                    android:id="@+id/icfb"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/ic_fb"
                                    />

                                <com.p1024.convenientdetailer.CustomViews.CustomTextView
                                    android:layout_toRightOf="@id/icfb"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="www.facebook.com"
                                    android:gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/clr_black" />
                            </RelativeLayout>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#A9A9AB"
                            />
                        <!--Nine row-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/SIZE_10"
                                android:orientation="horizontal"
                                android:layout_weight="1">

                                <ImageView
                                    android:id="@+id/icinsta"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/ic_insta"
                                    />

                                <com.p1024.convenientdetailer.CustomViews.CustomTextView
                                    android:layout_toRightOf="@id/icinsta"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="www.instagram.com"
                                    android:gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/clr_black" />
                            </RelativeLayout>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#A9A9AB"
                            />
                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <!--service and pricing layout-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                  >
                    <com.p1024.convenientdetailer.CustomViews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:layout_margin="@dimen/SIZE_10"
                        android:textSize="@dimen/TEXT_SIZE_18"
                        android:text="Services and its Pricing"/>
                    <com.p1024.convenientdetailer.CustomViews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="View More"
                        android:layout_margin="@dimen/SIZE_10"

                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/buttondrawable"/>
                </RelativeLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/media_card_view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                app:cardBackgroundColor="@android:color/white"
                app:cardElevation="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ListView
                    android:id="@+id/listviewservice"
                    android:layout_width="match_parent"
                    android:layout_height="160dp">

                </ListView>
            </LinearLayout>
            </android.support.v7.widget.CardView>





                <!--Rating and Reviews layout-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    >
                    <com.p1024.convenientdetailer.CustomViews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:layout_margin="@dimen/SIZE_10"
                        android:textSize="@dimen/TEXT_SIZE_18"
                        android:text="Rating and Reviews"/>
                    <com.p1024.convenientdetailer.CustomViews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="View More"
                        android:layout_margin="@dimen/SIZE_10"

                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/buttondrawable"/>
                </RelativeLayout>

                <android.support.v7.widget.CardView
                    android:id="@+id/ratingview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardElevation="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="visible">
                        <ListView
                            android:id="@+id/listrating"
                            android:layout_width="match_parent"
                            android:layout_height="160dp">
                        </ListView>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <!--<android.support.v4.view.ViewPager
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/size_10"
                    android:layout_marginRight="@dimen/size_10"
                    />-->


                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <android.support.v4.view.ViewPager
                        android:id="@+id/pager"
                        android:layout_width="fill_parent"
                        android:layout_height="100dp"
                        android:layout_alignParentTop="true" />

                    <com.p1024.convenientdetailer.CustomViews.CirclePageIndicator
                        android:id="@+id/indicator"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="bottom"
                        android:padding="10dip"
                        app:centered="true"
                        app:fillColor="#A9A9AB"
                        app:pageColor="#A9A9AB"
                        app:snap="false" />
                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>